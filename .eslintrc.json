{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/state-in-constructor": "off",
    "react/jsx-props-no-spreading": 0,
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "labelComponents": ["CustomInputLabel"],
        "labelAttributes": ["label"],
        "controlComponents": ["CustomInput"],
        "depth": 3
      }
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "login",
          "logout",
          "setAlert",
          "register",
          "getCurrentProfile",
          "createProfile",
          "editProfile",
          "deleteProfile",
          "getProfiles",
          "getProfileById",
          "getFilteredProfiles",
          "deleteParentProfile",
          "createParentProfile",
          "editParentProfile",
          "getFilteredJobs",
          "getJobs",
          "editSitterProfile",
          "getSitters",
          "getFilteredSitters",
          "getSitterById",
          "createSitterProfile",
          "getJobById",
          "deleteSitterProfile"
        ]
      }
    ],
    "react/jsx-curly-newline": "off",
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "react/jsx-one-expression-per-line": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-restricted-syntax": "off"
  }
}
